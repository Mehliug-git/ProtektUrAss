{
    "manifest_version": 2,
    "name": "ProtektUrAss",
    "version": "3",
    "description": "Ouais on verra ca plus tard.",
    "permissions": [
      "activeTab",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "webNavigation",
      "<all_urls>"
    ],
    "icons": {
      "16": "peche.png", 
      "48": "peche.png",  
      "128": "peche.png" 
    },
    "browser_action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    }

  }
  