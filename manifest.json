{
  "manifest_version": 3,
  "name": "ProtektUrAss",
  "version": "3",
  "description": "Ouais on verra ca plus tard.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "declarativeNetRequest",
    "webNavigation",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "modify_headers",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "peche.png",
    "48": "peche.png",
    "128": "peche.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "punycode.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
